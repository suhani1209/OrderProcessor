	<table>
		<tr><td><h3>Order id :</h3> </td>
			<td>${orderDto.orderId } </td>
		</tr>
		<tr><td><h3>Order status :</h3></td>
			<td> ${orderDto.status }</td>
		</tr>
		<tr><td><h3>Order date :</h3></td>
			<td> ${orderDto.orderedOn }</td>
		</tr>
		
	</table>
	<form:form action="/update" method="post" modelAttribute="orderDto">
		<c:forEach items="${products}" var="product">
				<c:when test="${fn:contains(orderDto.products, product.productName)}">
				print(product.productName)
				<form:checkbox path="products" value="${ product}" checked="checked"/>
				</c:when>
				<c:otherwise>
					
				</c:otherwise>
				<tr>
					<td>${product.productName}</td>
					<td>${product.productCategory}</td>
				</tr>
		</c:forEach> 
		
	<input type ="submit"/>
	</form:form>



